# Application config
APP_NAME=legacy-rp-admin-v3
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack

# Steam API key: https://steamcommunity.com/dev/apikey
STEAM_API_KEY=your_steam_api_key

# Database connection
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=legacy-rp-admin-v3
